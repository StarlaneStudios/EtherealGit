{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "go",
            "args": [
                "build",
                "-tags",
                "dev",
                "-gcflags",
                "all=-N -l",
                "-o",
                "build/bin/WailsAppDebug.exe"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build: production",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "wails",
            "args": [
                "build"
            ],
            "problemMatcher": []
        }
    ]
}